{
  "name": "anime-wings",
  "version": "1.0.0",
  "description": "A modern web platform for micro anime stories with 120 FPS smooth animations",
  "main": "public/index.html",
  "scripts": {
    "dev": "npx serve public",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/tailwind.css --watch",
    "start": "npm run dev"
  },
  "keywords": [
    "anime",
    "stories",
    "web",
    "firebase",
    "tailwindcss",
    "daisyui",
    "micro-fiction"
  ],
  "author": "Anime Wings Team",
  "license": "MIT",
  "dependencies": {
    "firebase": "^10.12.4"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.4",
    "daisyui": "^4.12.10",
    "serve": "^14.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/anime-wings.git"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}